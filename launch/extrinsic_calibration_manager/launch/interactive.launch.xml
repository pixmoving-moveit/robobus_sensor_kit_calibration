<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="vehicle_id" default="default"/>
  <arg name="sensor_model" default="robobus_sensor_kit"/>
  <arg name="camera_name"  default="camera_top"/>
  <arg name="rviz" default="true"/>
  <arg name="use_concatenated_pointcloud" default="true"/>
  <let name="function_name" value="extrinsic_calibration_manager"/>

  <group>
    <!-- <push-ros-namespace namespace="sensor_kit"/> -->
    <include file="$(find-pkg-share robobus_sensor_kit_calibration)/launch/$(var function_name)/launch/interactive_sensor_kit.launch.xml" if="$(var rviz)">
      <arg name="vehicle_id" value="$(var vehicle_id)"/>
      <arg name="camera_name" value="$(var camera_name)"/>
      <arg name="sensor_model" value="$(var sensor_model)"/>
    </include>
  </group>
</launch>
