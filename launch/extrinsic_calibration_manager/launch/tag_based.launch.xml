<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="vehicle_id" default="default"/>
  <let name="sensor_model" value="robobus_sensor_kit"/>
  <arg name="camera_name" default="top/gmsl"/>
  <arg name="rviz" default="true"/>
  <let name="function_name" value="extrinsic_calibration_manager"/>

  <group>
    <push-ros-namespace namespace="sensor_kit"/>
    <include file="$(find-pkg-share robobus_sensor_kit_calibration)/launch/$(var function_name)/launch/tag_based_sensor_kit.launch.xml">
      <arg name="vehicle_id" value="$(var vehicle_id)"/>
      <arg name="camera_name" value="$(var camera_name)"/>
      <arg name="rviz" value="$(var rviz)"/>
    </include>
  </group>
</launch>
